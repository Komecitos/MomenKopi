<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".StrukPembayaranActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/tvReceiptTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receipt"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Display Ordered Items -->
    <TextView
        android:id="@+id/tvOrderedItemsDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Items will be shown here"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvReceiptTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Display Total Price -->
    <TextView
        android:id="@+id/tvTotalPriceDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price: Rp 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderedItemsDetails"/>

    <!-- Display Payment Method -->
    <TextView
        android:id="@+id/tvPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method: "
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalPriceDetail"/>

    <!-- Go Back Button -->
    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPaymentMethod"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3498db"/>


</androidx.constraintlayout.widget.ConstraintLayout>
