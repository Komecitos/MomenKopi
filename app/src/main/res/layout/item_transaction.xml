<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <!-- Total Pembayaran di tengah -->
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp65.000"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- Nama Pembeli -->
    <TextView
        android:id="@+id/tvNamaPembeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tania Putri"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Rincian Transaksi -->
    <TextView
        android:id="@+id/tvRincianTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rincian Transaksi"
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Informasi Transaksi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="8dp">

        <!-- Kiri: Metode Pembayaran, Waktu, Tanggal, ID Transaksi, Order -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMetodePembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran: Qris"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tvWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu: 11:20"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal: 21 Nov 2024"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tvIdTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Transaksi: 1618gwg1138161gew"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order: Brownies Rp22.000, Americano Rp43.000"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="start"/>
        </LinearLayout>

        <!-- Kanan: Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textSize="14sp"
                android:textColor="#388E3C"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Garis Pembatas -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#BDBDBD"/>

    <!-- Jumlah dan Total Pembayaran (Jumlah di kiri, harga di kanan) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="8dp">

        <!-- Kiri: Jumlah -->
        <TextView
            android:id="@+id/tvJumlahLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="start"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvJumlahHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp65.000"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="8dp">

        <!-- Kiri: Total -->
        <TextView
            android:id="@+id/tvTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="start"
            android:layout_marginEnd="8dp"/>

        <!-- Kanan: Harga Total -->
        <TextView
            android:id="@+id/tvTotalHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp65.000"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="end"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
