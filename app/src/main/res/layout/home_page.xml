<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Logo"
            android:background="@drawable/logo"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tabHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="16sp"
                android:layout_marginHorizontal="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat"
                android:textSize="16sp"
                android:layout_marginHorizontal="16dp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/tabStatistik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistik"
                android:textSize="16sp"
                android:layout_marginHorizontal="16dp"
                android:textColor="#888888" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu" />
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Search"
            android:textSize="16sp"
            android:padding="8dp"
            android:inputType="text"
            android:background="@drawable/search_bar_bg" />
    </LinearLayout>

    <!-- GridLayout untuk Produk Kopi -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp">

            <!-- Item Produk Kopi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:padding="16dp"
                android:background="#F9F9F9"
                android:elevation="4dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="174dp"
                    android:padding="16dp"
                    android:background="@drawable/latte"/>

                <TextView
                    android:id="@+id/tvNamaKopi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latte Cofee"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvHargaKopi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 15.000"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddKopi1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Add"
                    android:background="@drawable/ripple_effect"
                    android:backgroundTint="#9f5f2e"
                    android:elevation="4dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Item Produk Kopi 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:padding="16dp"
                android:background="#F9F9F9"
                android:elevation="4dp"
                android:layout_margin="8dp"
                android:gravity="center">


                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="174dp"
                    android:background="@drawable/cappucinno"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/tvNamaKopi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cappucinno"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvHargaKopi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 18.000"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddKopi2"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Add"
                    android:background="@drawable/ripple_effect"
                    android:backgroundTint="#9f5f2e"
                    android:elevation="4dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

<!--            Makanan2-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:padding="16dp"
                android:background="#F9F9F9"
                android:elevation="4dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="174dp"
                    android:padding="16dp"
                    android:background="@drawable/taco"/>

                <TextView
                    android:id="@+id/tvNamaMkn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taco"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvHargaMkn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 20.000"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddMkn2"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Add"
                    android:background="@drawable/ripple_effect"
                    android:backgroundTint="#9f5f2e"
                    android:elevation="4dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

<!--            Makanan 1-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:padding="16dp"
                android:background="#F9F9F9"
                android:elevation="4dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="174dp"
                    android:padding="16dp"
                    android:background="@drawable/brownies"/>

                <TextView
                    android:id="@+id/tvNamaMkn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brownies Cake"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvHargaMkn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 18.000"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddMkn1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Add"
                    android:background="@drawable/ripple_effect"
                    android:backgroundTint="#9f5f2e"
                    android:elevation="4dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- More Products -->
            <!-- Add similar blocks for more products following the structure above -->

        </GridLayout>
    </ScrollView>

    <!-- Popup Price Section (Permanen di bawah) -->
    <!-- Popup Price Section (Hidden by Default) -->
    <LinearLayout
        android:id="@+id/popupPriceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/popup_background"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        android:visibility="gone"> <!-- Hidden by default -->

        <TextView
            android:id="@+id/tvPopupPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item: Rp 0"
            android:textSize="16sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/btnClosePopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@android:color/holo_red_light" />
    </LinearLayout>


</LinearLayout>