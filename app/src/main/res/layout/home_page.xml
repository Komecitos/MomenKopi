<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/logo"
            android:contentDescription="Logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Riwayat"
                android:textColor="#888888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tabStatistik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Statistik"
                android:textColor="#888888"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu" />
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/search_bar_bg"
            android:hint="Search"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- GridLayout untuk Produk Kopi -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp">

            <!-- Item Produk Kopi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#F9F9F9"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="174dp"
                    android:background="@drawable/latte"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/tvNamaKopi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Latte Cofee"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHargaKopi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Rp 15.000"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddKopi1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_effect"
                    android:backgroundTint="#9f5f2e"
                    android:elevation="4dp"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Item Produk Kopi 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#F9F9F9"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">


                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="174dp"
                    android:background="@drawable/cappucinno"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/tvNamaKopi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cappucinno"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHargaKopi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Rp 18.000"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddKopi2"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_effect"
                    android:backgroundTint="#9f5f2e"
                    android:elevation="4dp"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            Makanan2-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#F9F9F9"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="174dp"
                    android:background="@drawable/taco"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/tvNamaMkn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Taco"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHargaMkn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Rp 20.000"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddMkn2"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_effect"
                    android:backgroundTint="#9f5f2e"
                    android:elevation="4dp"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            Makanan 1-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#F9F9F9"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="174dp"
                    android:background="@drawable/brownies"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/tvNamaMkn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Brownies Cake"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHargaMkn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Rp 18.000"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddMkn1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_effect"
                    android:backgroundTint="#9f5f2e"
                    android:elevation="4dp"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- More Products -->
            <!-- Add similar blocks for more products following the structure above -->

        </GridLayout>
    </ScrollView>

    <!-- Popup Price Section (Mengambang di Tengah) -->

    <LinearLayout
        android:id="@+id/popupPriceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Gambar Produk -->
        <ImageView
            android:id="@+id/imgPopupItem"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/latte" />

        <!-- Nama Item -->
        <TextView
            android:id="@+id/tvPopupItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Harga Item -->
        <TextView
            android:id="@+id/tvPopupPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <!-- Pilihan Suhu (Panas atau Dingin) -->
        <RadioGroup
            android:id="@+id/radioGroupSuhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPopupTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Suhu: -"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="" />


            <RadioButton
                android:id="@+id/radioPanas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panas"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle=""/>

            <RadioButton
                android:id="@+id/radioDingin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dingin"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle=""/>
        </RadioGroup>

        <!-- Input Jumlah Item -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah: "
                android:textColor="#000000"
                android:textSize="16sp" />


            <!-- Button to decrease item count -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_decrease"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/delete" />

            <!-- TextView to display current count -->
            <TextView
                android:id="@+id/etQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold"/>

            <!-- Button to increase item count -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_increase"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/plus"
                android:textSize="10dp" />
        </LinearLayout>

        <!-- LinearLayout for Cancel and Add buttons in one row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Cancel Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ripple_effect"
                android:backgroundTint="#E91E63"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <!-- Add to Order Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddToOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_effect"
                android:backgroundTint="#9f5f2e"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Add to Order"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Popup untuk Melanjutkan ke Pembayaran, hanya jika suhu dipilih -->
    <LinearLayout
        android:id="@+id/popupCheckoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_marginBottom="80dp">

        <TextView
            android:id="@+id/tvCheckoutPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Total Harga: Rp 0"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnProceedToPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:backgroundTint="#9f5f2e"
            android:elevation="4dp"
            android:padding="16dp"
            android:text="Lanjut ke Pembayaran"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</LinearLayout>